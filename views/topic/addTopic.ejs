<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<base href="/">
	<title><%= title %></title>
	<meta name="description" content="">
	<meta name="keywords" content="">
	<%- include('../common/style'); %>
 	<link rel="stylesheet" href="css/views/topic.css">
  </head>
  <body >
   
   	<%- include('../common/header', {page: 'index'}); %>
  
	<div class="container">
		<div class="topic">
	    	<div class="topic-module clearfix" >
	    		<div class="module-tit">
	    			 <h1 ><%= title  %></h1>
	    		</div>
	           	
	           	<div class="module-content">
	           		<form class="form-horizontal" id="topic-form">
					  <div class="form-group form-line-input">
		                <input id="user" class="form-control <%= data ? 'edited' : '' %>" name="title" type="text" value="<%= data ? data.title: ''  %>">
		                <label for="user">标题</label>
		                <span class="help-block"></span>
		              </div>
					  <div class="form-group form-line-input">
					    <textarea class="form-control <%= data ? 'edited' : '' %>" rows="6" name="content" ><%= data ? data.content: ''%></textarea>
		                <label for="pass">内容</label>
		                <span class="help-block"></span>
		              </div>
		              <a href="javascript:;" class="btn btn-large btn-block btn-primary" id="<%= data ? 'edit-topic': 'login-btn'  %>" style="margin-top:48px;">保存</a>
					</form>
	           	</div>
	    	</div>
		</div>
	</div>

    <%- include('../common/footer'); %>

	<script src="js/require.min.js"></script>
	<script src="js/config.js"></script>
	<script>

	    require(['views/addTopic'],function(topic){
	    	topic.init();
	    });
	</script>
  </body>
</html>
