<!DOCTYPE html>
<html>
  <head>
  	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<base href="/">
	<title><%= title %></title>
	<meta name="description" content="">
	<meta name="keywords" content="">
	<%- include('../common/style'); %>
 	<link rel="stylesheet" href="css/views/topic.css">
  </head>
  <body >
   
   	<%- include('../common/header', {page: 'index'}); %>
  
	<div class="w-768">
		<div class="topic">
	    	<div class="topic-module clearfix" >
	    		<div class="module-tit">
	    			 <h1 ><%= title  %></h1>
	    		</div>
	           	
	           	<div class="module-content">
	           		<form class="form-horizontal" id="topic-form">
					  <div class="form-group form-line-input">
		                <input id="title" class="form-control <%= data ? 'edited' : '' %>" name="title" type="text" value="<%= data ? data.title: ''  %>">
		                <label for="title">标题</label>
		                <span class="help-block"></span>
		              </div>
					  <div class="form-group form-line-input">
					    <textarea id="content" class="form-control <%= data ? 'edited' : '' %>" rows="4" name="summary" ><%= data ? data.summary: ''%></textarea>
		                <label for="content">摘要</label>
		                <span class="help-block"></span>
		              </div>
		              <div class="form-group  form-line-input"  style="min-height:350px;">
						<label for="" class="label-tit">详情</label>
		              	<script  type="text/plain" id="myeditor" name="contents" style="height:300px;"><%- data ? data.content: ''%></script>
		              </div>

		              <div class="btns-group" >
	              			<a href="javascript:;" class="btn btn-large btn-block btn-primary" id="<%= data ? 'edit-topic': 'login-btn'  %>" style="margin-top:48px;">保存</a>
		              </div>
					</form>
	           	</div>
	    	</div>
		</div>
	</div>

    <%- include('../common/footer'); %>

	<script src="js/require.min.js"></script>
	<script src="js/config.js"></script>
	<script>

	    require(['views/topic-add'],function(topic){
	    	topic.init();
	    });
	</script>
  </body>
</html>
