<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%= title %></title>
	<base href="/">
	<%- include('../common/style'); %>
	<link rel="stylesheet" href="css/views/login.css">
	
</head>
<body>
	
	
	<div class="login-box">
		<h1 class="login-box-tit">
			登录
		</h1>
		<div class="login-box-inner">
			<form class="form-horizontal" id="login-form">
			  <div class="form-group form-line-input">
                <input id="user" class="form-control" name="user" type="text" >
                <label for="user">用户名</label>
                <span class="help-block"></span>
              </div>
			  <div class="form-group form-line-input">
                <input id="pass" class="form-control" name="password" type="password"  >
                <label for="pass">密码</label>
                 <span class="help-block"></span>
              </div>

              <a href="javascript:;" class="btn btn-large btn-block btn-primary" id="login-btn">登录</a>
			</form>
		</div>
	</div>
	

	<script src="js/require.min.js"></script>
	<script src="js/config.js"></script>
	<script>
	    require(['views/login'],function(login){
	    	login.init();
	    });
	</script>
	
</body>
</html>